#subtitle
  @extend $logo-text
  font-size: subtitle-size
  line-height: subtitle-size
  letter-spacing: 1px
  color: color-border

#subtitle-wrap
  margin-top: subtitle-size

#main-nav
  float: left
  margin-left: -15px

$nav-link
  float: left
  color: color-link
  opacity: 0.6
  text-decoration: none
  text-shadow: 0 1px rgba(0, 0, 0, 0.2)
  transition: opacity 0.2s
  display: block
  padding: 20px 15px
  &:hover
    opacity: 1

.nav-icon
  @extend $nav-link
  font-family: font-icon
  text-align: center
  font-size: font-size
  width: font-size
  height: font-size
  padding: 20px 15px
  position: relative
  cursor: pointer

.main-nav-link
  @extend $nav-link
  font-weight: 300
  letter-spacing: 1px
  @media mq-mobile
    display: none

#main-nav-toggle
  display: none
  &:before
    content: "\f0c9"
  @media mq-mobile
    display: block

#sub-nav
  float: right
  margin-right: -15px

#nav-rss-link
  &:before
    content: "\f09e"

#nav-search-btn
  &:before
    content: "\f002"

#search-form-wrap
  position: absolute
  top: 15px
  width: 150px
  height: 30px
  right: -150px
  opacity: 0
  transition: 0.2s ease-out
  &.on
    opacity: 1
    right: 0
  @media mq-mobile
    width: 100%
    right: -100%

.search-form
  position: absolute
  top: 0
  left: 0
  right: 0
  background: #fff
  padding: 5px 15px
  border-radius: 15px
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.3)

.search-form-input
  border: none
  background: none
  color: color-default
  width: 100%
  font: 13px font-sans
  outline: none
  &::-webkit-search-results-decoration
  &::-webkit-search-cancel-button
    -webkit-appearance: none

.search-form-submit
  position: absolute
  top: 50%
  right: 10px
  margin-top: -7px
  font: 13px font-icon
  border: none
  background: none
  color: #bbb
  cursor: pointer
  &:hover, &:focus
    color: #777

.music-ui
  padding: 20px
  overflow: hidden
  font-size: 30px
  color: color-default
  background-color: color-mobile-nav-background
  position: fixed
  right: 0
  top: 0
  z-index: 9
  width:calc(100% - 40px)
  height:calc(100vh - 40px)
  background-position: center
  background-repeat: no-repeat


.music-ui .control-wrap
  width:50%
  float:left

.spin-logo
  position: absolute
  left:50%
  top:50%
  transform: translate(-50%, -50%)

.control-wrap > div
  width:calc(50% - 15px)
  float:left
  padding-left: 15px 

.marquee
  width: 50%
  color: #fff
  float:left
  overflow:hidden
  text-transform: uppercase

.progress
  position: absolute
  left:0
  bottom:0
  width:100%

#progressbar
  background-color: black
  width: 100%

#timerWrap
  padding: 0 20px
  
.volume-wrap
 width: 50%

.music-ui a
  color: color-default
  text-decoration: none
  text-transform: uppercase

.help
  position: absolute
  left: 50%
  top: 50%
  background: url(/img/help.png) no-repeat center center
  width:300px
  height: 300px
  display:none
  transform: translate(-50%, -50%)
  background-size: 300px
  box-shadow: 12px 12px 12px rgba(0,0,0,0.3)

.credit
  font-style: italic
  font-weight: 700
  font-size:35px
  text-shadow: 2px 2px 0 rgba(255,0,0,0.8), -1px 1px 0 rgba(255,255,0,0.8), -3px 1px 0 rgba(0,255,255,0.8)

.credit-wrap
  position: absolute
  right: 20px
  bottom: 50px